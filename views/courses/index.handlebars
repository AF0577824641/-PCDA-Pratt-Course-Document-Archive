<div class="content-header">
  <h7>Courses</h7>
  <a href="/courses/new" class="btn btn-primary">
    <i class="fas fa-plus me-1"></i>New Course
  </a>
</div>

<div class="content-section">

  <!-- Search and Filter -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <form action="/courses" method="get" class="mb-3">
            <div class="input-group">
              <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Search courses..."
                value="{{searchQuery}}"
              />
              <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </form>
        </div>
        <div class="col-md-6">
          <div class="d-flex justify-content-end">
            <div class="dropdown">
              <button
                class="btn btn-outline-secondary dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
              >
                {{#if currentDepartment}}{{currentDepartment}}{{else}}All
                  Departments{{/if}}
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/courses">All Departments</a></li>
                {{#each departments}}
                  <li><a
                      class="dropdown-item"
                      href="/courses?department={{this}}"
                    >{{this}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Course List -->
  {{#if courses.length}}
    <div class="row">
      {{#each courses}}
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">{{this.code}}: {{this.title}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{this.department}}</h6>
              <p class="card-text">{{this.description}}</p>
              <a
                href="/courses/{{this.id}}"
                class="btn btn-outline-primary btn-sm"
              >View Details</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">
      No courses found.
    </div>
  {{/if}}
</div>